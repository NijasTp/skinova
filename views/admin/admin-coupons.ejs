<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coupons - Admin Panel</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body class="bg-gray-100 p-4">
    <%- include("../../views/partials/admin/header") %>
    <div class="container mx-auto bg-white p-6 rounded-lg shadow-lg">
        <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Available Coupons</h1>

        <div class="overflow-x-auto">
            <table class="min-w-full bg-white">
                <thead>
                    <tr>
                        <th class="py-2 px-4 bg-blue-500 text-white">Coupon Code</th>
                        <th class="py-2 px-4 bg-blue-500 text-white">Discount</th>
                        <th class="py-2 px-4 bg-blue-500 text-white">Min Price</th>
                        <th class="py-2 px-4 bg-blue-500 text-white">Start Date</th>
                        <th class="py-2 px-4 bg-blue-500 text-white">Expiry Date</th>
                        <th class="py-2 px-4 bg-blue-500 text-white">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (coupons.length > 0) { %>
                        <% coupons.forEach(coupon => { %>
                            <tr>
                                <td class="py-2 px-4 border-b"><%= coupon.code %></td>
                                <td class="py-2 px-4 border-b">₹<%= coupon.offerPrice %></td>
                                <td class="py-2 px-4 border-b">₹<%= coupon.minimumPrice %></td>
                                <td class="py-2 px-4 border-b"><%= new Date(coupon.startDate).toLocaleDateString() %></td>
                                <td class="py-2 px-4 border-b"><%= new Date(coupon.expireOn).toLocaleDateString() %></td>
                                <td class="py-2 px-4 border-b text-center">
                                    <button class="bg-red-500 text-white py-1 px-3 rounded hover:bg-red-600" onclick="confirmDelete('<%= coupon._id %>')">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </button>
                                    <a href="/admin/edit-coupon/<%= coupon._id %>" class="ml-2 bg-yellow-500 text-white py-1 px-3 rounded hover:bg-yellow-600">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="py-4 text-center text-gray-500 italic">No coupons available.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <div class="flex justify-center mt-6">
            <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %>" class="py-2 px-4 border rounded mx-1 text-blue-500">Previous</a>
            <% } %>
            <% for (let i = 1; i <= totalPages; i++) { %>
                <a href="?page=<%= i %>" class="py-2 px-4 border rounded mx-1 text-blue-500 <%= i === currentPage ? 'bg-blue-500 text-white' : '' %>"><%= i %></a>
            <% } %>
            <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %>" class="py-2 px-4 border rounded mx-1 text-blue-500">Next</a>
            <% } %>
        </div>

        <div class="flex justify-center mt-6">
            <a href="/admin/add-coupon" class="bg-green-500 text-white py-2 px-4 rounded hover:bg-green-600">Add Coupon</a>
        </div>
    </div>
    <%- include("../../views/partials/admin/footer") %>

    <script>
        function confirmDelete(couponId) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/admin/delete-coupon/${couponId}`;
                }
            });
        }
    </script>
</body>

</html>