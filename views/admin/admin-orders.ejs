<%- include('../partials/admin/header') %>

<style>
  :root {
      --primary-color: #3498db;
      --secondary-color: #2c3e50;
      --success-color: #2ecc71;
      --danger-color: #e74c3c;
      --info-color: #3498db;
      --light-gray: #ecf0f1;
  }
  
  .order-table th, .order-table td {
      vertical-align: middle;
  }

  .status-badge {
      padding: 6px 12px;
      border-radius: 15px;
      font-weight: 500;
  }

  .order-actions .btn {
      margin: 0 2px;
  }

  .return-message {
      font-size: 14px;
      font-weight: bold;
      color: #d9534f;
      margin-top: 5px;
  }

  .return-actions {
      margin-top: 10px;
  }
</style>

<div class="container-fluid px-4">
    <h1 class="mt-4">Order Management</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            All Orders
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped order-table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Product</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(order => { %>
                            <% order.orderedItems.forEach(item => { %>
                                <tr>
                                    <td>#<%= order.orderId %></td>
                                    <td><%= new Date(order.createdOn).toLocaleDateString() %></td>
                                    <td><%= order.userId.name %></td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <% if (item.product) { %>
                                                <a href="/admin/orders/<%= order._id %>/product/<%= item.product._id %>">
                                                    <img src="/<%= item.product.productImage ? item.product.productImage[0] : 'default.jpg' %>" 
                                                         alt="Product" 
                                                         style="width: 50px; height: 50px; object-fit: cover;"
                                                         class="me-2">
                                                </a>
                                            <% } else { %>
                                                <span>No product image</span>
                                            <% } %>
                                            
                                            <span><%= item.productName %></span>
                                        </div>
                                    </td>
                                    <td>â‚¹<%= item.price %></td>
                                    <td>
                                        <span class="status-badge <%= 
                                            item.status === 'delivered' ? 'bg-success' :
                                            item.status === 'cancelled' ? 'bg-danger' :
                                            item.status === 'shipped' ? 'bg-info' :
                                            item.status === 'Return Request' ? 'bg-warning' :
                                            item.status === 'Returned' ? 'bg-secondary' :
                                            item.status === 'Return offer rejected by admin' ? 'bg-danger' :
                                            'bg-light'
                                        %>">
                                        <%= item.status.toUpperCase() %>
                                        </span>
                                    </td>
                                    <td class="order-actions">
                                        <a href="/admin/orders/<%= order._id %>/product/<%= item.product._id %>" 
                                            class="btn btn-primary btn-sm">
                                            View Details
                                        </a>                                       
                                        
                                       
                                        
                                        <% if (item.status !== 'delivered') { %>
                                            <button onclick="updateStatus('<%= order._id %>', '<%= item.product._id %>')" 
                                                    class="btn btn-info btn-sm">
                                                Update Status
                                            </button>
                                        <% } %>
                                        <% if (item.status === 'return request') { %>
                                            <div class="return-message">ðŸ”„ Product return requested</div>
                                            <div>Reason: <%= item.returnReason %></div>
                                            <div class="return-actions">
                                                <button onclick="approveReturn('<%= item._id %>')" 
                                                        class="btn btn-success btn-sm">
                                                    Approve
                                                </button>
                                                <button onclick="rejectReturn('<%= item._id %>')" 
                                                        class="btn btn-danger btn-sm">
                                                    Reject
                                                </button>
                                            </div>
                                        <% } %>
                                        </tr>
                                    </td>
                             
                            <% }); %>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    async function updateStatus(orderId, productId) {
        const { value: status } = await Swal.fire({
            title: 'Update Order Status',
            input: 'select',
            inputOptions: {
                'pending': 'Pending',
                'confirmed': 'Confirmed',
                'shipped': 'Shipped',
                'delivered': 'Delivered'
            },
            inputPlaceholder: 'Select status',
            showCancelButton: true,
            inputValidator: (value) => {
                if (!value) {
                    return 'You need to select a status!';
                }
            }
        });

        if (status) {
            try {
                const response = await fetch('/admin/orders/update-status', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ orderId, productId, status }),
                });

                const data = await response.json();
                
                if (data.success) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: 'Order status updated successfully',
                        timer: 1500
                    });
                    location.reload();
                } else {
                    throw new Error(data.message);
                }
            } catch (error) {
                console.error('Error:', error);
                await Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.message || 'Failed to update status'
                });
            }
        }
    }

    async function approveReturn(itemId) {
        try {
            const response = await fetch(`/admin/approve-return/${itemId}`, { method: 'POST' });
            const data = await response.json();

            if (data.success) {
                await Swal.fire({
                    icon: 'success',
                    title: 'Return Approved',
                    text: 'The return has been successfully approved.',
                    timer: 1500
                });
                location.reload();
            } else {
                throw new Error(data.message);
            }
        } catch (error) {
            console.error('Error:', error);
            await Swal.fire({
                icon: 'error',
                title: 'Error',
                text: error.message || 'Failed to approve return'
            });
        }
    }

    async function rejectReturn(itemId) {
        try {
            const response = await fetch(`/admin/reject-return/${itemId}`, { method: 'POST' });
            const data = await response.json();

            if (data.success) {
                await Swal.fire({
                    icon: 'warning',
                    title: 'Return Rejected',
                    text: 'The return request has been rejected.',
                    timer: 1500
                });
                location.reload();
            } else {
                throw new Error(data.message);
            }
        } catch (error) {
            console.error('Error:', error);
            await Swal.fire({
                icon: 'error',
                title: 'Error',
                text: error.message || 'Failed to reject return'
            });
        }
    }
</script>

<%- include('../partials/admin/footer') %>