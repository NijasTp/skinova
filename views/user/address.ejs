<html lang="en">
 <head>
  <meta charset="UTF-8"/>
  <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
  <title>
   Account Page
  </title>
  <script src="https://cdn.tailwindcss.com">
  </script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
  <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@400;600;700&display=swap" rel="stylesheet"/>
  <style>
   body {
            font-family: 'Nunito Sans', sans-serif;
        }
        .hero {
  display: flex;
  justify-content: space-between;
  background-color: #e6f4f4;
  align-items: center;
  padding: 4rem 2rem;
  width: 100%;
  margin: 0 auto;
  min-height: 50vh;
}

.hero-content {
  max-width: 500px;
  margin-left: 40%;
}

.hero-title {
  font-size: 2rem;
  line-height: 1.2;
  color: #2c3e50;
  margin-bottom: 1rem;
}

.hero-description {
  color: #5d6d7e;
  margin-bottom: 2rem;
  line-height: 1.6;
}

.cta-button {
  display: inline-block;
  padding: 0.8rem 2rem;
  background-color: #1a4741;
  color: white;
  text-decoration: none;
  border-radius: 4px;
  transition: background-color 0.3s ease;
}

.cta-button:hover {
  background-color: #123530;
}

.hero-image {
  width: 300px;
  position: relative;
  right: 100px;

}
@media (max-width: 768px) {
  .hero {
      flex-direction: column;
      text-align: center;
      padding: 2rem;
  }
  .hero-image {
  width: 300px;
  position: relative;
  left: 30px;

}

}
  </style>
 </head>
 <body class="bg-gray-100">
    <%- include('../partials/user/header') %> 
    <main class="hero w-full">
      <div class="hero-content">
         <b><h1 class="hero-title">ADDRESS</h1></b>
          <p class="hero-description">
             <a href="/">Home</a> <span> > </span> <a href="/address">Address</a>
          </p>
      </div>
      <img src="/img/skinova cover.png" alt="Skinova Cover" class="hero-image">
  </main>
  <div class="flex flex-col md:flex-row">
   <div class="w-full md:w-1/4 bg-gray-200 p-6">
    <h2 class="text-xl font-bold mb-4">
     SETTINGS
    </h2>
    <ul>
     <li class="mb-2">
      <a class="text-black" href="/orders">
       Orders
      </a>
     </li>
     <li class="mb-2">
      <a class="text-black" href="/profile">
       Personal Info
      </a>
     </li>
     <li class="mb-2">
      <a class="text-black" href="/address">
       Adresses
      </a>
     </li>
     <li class="mb-2">
      <a class="text-black" href="/wallet">
       Wallet
      </a>
     </li>
    </ul>
   </div>
   <div class="w-full md:w-3/4 p-6">
    <h2 class="text-2xl font-bold mb-4">
     MY ADDRESSES
    </h2>
    <div class="space-y-4">
      <% if (addresses.length > 0) { %>
          <% addresses.forEach((addressDoc, docIndex) => { %>
              <% addressDoc.address.forEach((address, index) => { %> 
                  <div class="flex flex-col md:flex-row justify-between items-center border p-4 bg-white 
                              <%= address.isPrimary ? 'border-2 border-blue-500' : '' %>"
                       onclick="setPrimary('<%= address._id %>')">
                      <div class="mb-4 md:mb-0">
                          <p class="font-bold cursor-pointer">
                              <%= address.name %> 
                              <% if (address.isPrimary) { %>
                                  <span class="text-sm text-white bg-blue-500 px-2 py-1 rounded ml-2">Primary</span>
                              <% } %>
                          </p>
                          <p>
                              <%= address.streetAddress %>, <%= address.city %>, <%= address.state %>, <%= address.pincode %>
                          </p>
                      </div>
                      <a href="/deleteAddress?id=<%= address._id %>"  
                          onclick="return confirm('Are you sure you want to delete this address?')" 
                          class="bg-red-600 text-white px-4 py-2 rounded">
                          Delete
                      </a>
                      <a href="/editAddress?id=<%= address._id %>" class="text-primary mr-4">Edit</a>
                  </div>
              <% }) %>
          <% }) %>
      <% } else { %>
          <p class="text-center text-xl font-bold">
              No addresses found!
          </p>
      <% } %>
  </div>
  
  
  
  
    <hr class="my-6"/>
    <a href="/add-address" class="bg-blue-200 text-black px-6 py-2 rounded-full">
     Add Address
    </a>
   </div>
  </div>
  <script>

    async function setPrimary(addressId) {
        try {
            const userId = "<%= userId %>"; // Ensure this is correctly passed
            console.log("Setting primary address for:", userId, addressId); // Debugging

            const response = await fetch("/set-primary-address", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ userId, addressId }),
            });

            const data = await response.json();
            console.log("Server response:", data); // Debugging

            if (data.success) {
                location.reload(); // Refresh the page
            } else {
                alert("Failed: " + data.message); // Show exact error message
            }
        } catch (error) {
            console.error("Error:", error);
            alert("Something went wrong");
        }
    }

  </script>
 </body>
</html>

