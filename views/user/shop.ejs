<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title>Shopping</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@400;500&display=swap" rel="stylesheet"/>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #e6f4f4;
        }
        .header {
            background-image: url('https://placehold.co/1920x300');
            background-size: cover;
            background-position: center;
            height: 300px;
            position: relative;
        }
        .header h1 {
            font-family: 'Playfair Display', serif;
            font-size: 4rem;
            color: #1a202c;
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
        }
        .shopbod{
            background-color: #e6f4f4;
        }
        .image-container {
            position: relative;
            width: 100%;
            padding-top: 100%; /* 1:1 Aspect Ratio */
            overflow: hidden;
            border-radius: 0.5rem;
        }
        .image-container img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .hero {
      display: flex;
      justify-content: space-between;
      background-color: #e6f4f4;
      align-items: center;
      padding: 4rem 2rem;
      width: 100%;
      margin: 0 auto;
      min-height: 50vh;
    }

    .hero-content {
      max-width: 500px;
      margin-left: 40%;
    }

    .hero-title {
      font-size: 2rem;
      line-height: 1.2;
      color: #2c3e50;
      margin-top: 70px;;
    }

    .hero-description {
      color: #5d6d7e;
      margin-bottom: 2rem;
      line-height: 1.6;
    }

    .cta-button {
      display: inline-block;
      padding: 0.8rem 2rem;
      background-color: #1a4741;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      transition: background-color 0.3s ease;
    }

    .cta-button:hover {
      background-color: #123530;
    }

    .hero-image {
      width: 300px;
      position: relative;
      right: 100px;
    }

    @media (max-width: 768px) {
      .hero {
        flex-direction: column;
        text-align: center;
        padding: 2rem;
      }

      .hero-content {
        margin-left: 0;
      }

      .hero-image {
        width: 300px;
        position: relative;
        left: 0;
      }
    }
        /* Style for sorting dropdown */
        .form-control {
            padding: 0.5rem 1rem;
            border: 1px solid #ccc;
            border-radius: 0.375rem;
            background-color: white;
            transition: all 0.3s ease;
        }
        .form-control:focus {
            outline: none;
            border-color: #1a4741;
            box-shadow: 0 0 5px rgba(26, 71, 65, 0.5);
        }
        /* Style for Apply button */
        .btn-primary {
            background-color: #1a4741;
            color: white;
            padding: 0.5rem 1.5rem;
            border-radius: 0.375rem;
            transition: background-color 0.3s ease;
            font-weight: bold;
        }
        .btn-primary:hover {
            background-color: #123530;
        }
        /* Style for Clear All button */
        .btn-danger {
            background-color: #d9534f;
            color: white;
            padding: 0.5rem 1.5rem;
            border-radius: 0.375rem;
            transition: background-color 0.3s ease;
            font-weight: bold;
        }
        .btn-danger:hover {
            background-color: #c9302c;
        }
        /* Responsive styles */
        @media (max-width: 768px) {
            .form-inline {
                display: flex;
                flex-direction: column;
                gap: 0.5rem;
               /* margin-right: 50px; */
               margin-top: 20px;
            }
        }
        .flutter-button {
    display: inline-block;
    padding: 12px 24px; /* Adjust padding for button size */
    background-color: #1a4741; /* Button background color */
    color: white; /* Text color */
    text-align: center; /* Center the text */
    border-radius: 8px; /* Rounded corners */
    text-decoration: none; /* Remove underline */
    transition: background-color 0.3s ease, transform 0.2s ease; /* Smooth transition */
    font-weight: bold; /* Bold text */
}

.flutter-button:hover {
    background-color: #123530; /* Darker background on hover */
    transform: translateY(-2px); /* Slight lift effect on hover */
}

.flutter-button:active {
    transform: translateY(0); /* Reset lift effect on click */
}
    </style>
</head>
<body class="bg-gray-100">
    <%- include('../partials/user/header') %> 
    <main class="hero w-full">
        <div class="hero-content">
         <b>
          <h1 class="hero-title">
          SHOP
          </h1>
         </b>
         <p class="hero-description">
          <i>
           <a href="/">
            Home
           </a>
           <span>
            &gt;
           </span>
           <a href="/shop">
            Shop
           </a>
          </i>
         </p>
        </div>
        <img alt="Illustration of a shopping cart with various items" class="hero-image" height="300" src="/img/skinova cover.png" width="300"/>
       </main>
    <div class="container shopbod mx-auto px-4 py-8">
        <div class="flex flex-wrap -mx-4">
            <div class="w-full md:w-1/4 px-4">
                <div class="bg-white p-4 rounded-lg shadow-md">
                    <h2 class="text-xl font-semibold mb-4">CATEGORIES</h2>
                    <ul class="mb-8">
                        <% for (let i = 0; i < category.length; i++) { %>
                            <li class="mb-2">
                                <a class="text-gray-700" href="/shop?category=<%= category[i]._id %>&search=<%= search %>&sort=<%= sort %>">
                                    <%= category[i].name %>
                                </a>
                            </li>
                        <% } %>
                    </ul>                    
                    
                    
                </div>
            </div>
            <div class="w-full md:w-3/4 px-4">
                <div class="flex justify-end mb-4">
                    <form action="/shop" method="GET" class="form-inline">
                        <!-- Search Input -->
                        <input type="text" name="search" class="form-control" placeholder="Search products..." value="<%= search %>">
                    
                        <!-- Category Dropdown -->
                        <select name="category" class="form-control">
                            <option value="">All Categories</option>
                            <% category.forEach(cat => { %>
                                <option value="<%= cat._id %>" <%= selectedCategory == cat._id ? "selected" : "" %>>
                                    <%= cat.name %> (<%= cat.productCount %>)
                                </option>
                            <% }) %>
                        </select>
                    
                        <!-- Sorting Dropdown -->
                        <select name="sort" class="form-control">
                            <option value="">Sort by...</option>
                            <option value="popularity" <%= sort === "popularity" ? "selected" : "" %>>Popularity</option>
                            <option value="price_asc" <%= sort === "price_asc" ? "selected" : "" %>>Price: Low to High</option>
                            <option value="price_desc" <%= sort === "price_desc" ? "selected" : "" %>>Price: High to Low</option>
                            <option value="rating" <%= sort === "rating" ? "selected" : "" %>>Average Ratings</option>
                            <option value="featured" <%= sort === "featured" ? "selected" : "" %>>Featured</option>
                            <option value="new" <%= sort === "new" ? "selected" : "" %>>New Arrivals</option>
                            <option value="name_asc" <%= sort === "name_asc" ? "selected" : "" %>>Name: A to Z</option>
                            <option value="name_desc" <%= sort === "name_desc" ? "selected" : "" %>>Name: Z to A</option>
                        </select>
                    
                        <button type="submit" class="btn btn-primary">Apply</button>
                        <a href="/shop" class="btn btn-danger">Clear All</a>
                    </form>
                    
                </div>
                <div class="flex flex-wrap -mx-4">
                    <% for (let i = 0; i < products.length; i++) { %>
                        <div class="w-full md:w-1/3 px-4 mb-8">
                            <div class="bg-white p-4 rounded-lg shadow-md">
                                <a href="/productDetails?id=<%= products[i]._id %>">
                                    <div class="image-container">
                                        <img alt="<%= products[i].productName %>" src="<%= products[i].productImage[0] %>"/>
                                    </div>
                                    <h3 class="text-lg font-semibold mb-2">
                                        <%= products[i].productName %>
                                    </h3>
                                </a>
                                <p class="text-gray-700 mb-2">â‚¹<%= products[i].salePrice.toLocaleString('en-IN') %></p>
                                <div class="flex justify-between items-center">
                                    <a onclick="addToCart('<%= products[i]._id %>')" class="flutter-button">
                                        Add to Cart
                                    </a>
                                    <button class="text-red-500 hover:text-red-600">
                                        <a onclick="addToWishlist('<%= products[i]._id %>')"><i class="fas fa-heart text-xl"></i></a>
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
                <div class="flex justify-center mt-6">
                    <nav class="flex space-x-2">
                        <% if (currentPage > 1) { %>
                            <a href="/shop?page=<%= currentPage - 1 %>&search=<%= search %>&category=<%= selectedCategory %>&sort=<%= sort %>"
                               class="px-3 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        <% } %>
                
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <a href="/shop?page=<%= i %>&search=<%= search %>&category=<%= selectedCategory %>&sort=<%= sort %>"
                               class="px-4 py-2 rounded-lg <%= currentPage === i ? 'bg-green-500 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-300' %> transition">
                                <%= i %>
                            </a>
                        <% } %>
                
                        <% if (currentPage < totalPages) { %>
                            <a href="/shop?page=<%= currentPage + 1 %>&search=<%= search %>&category=<%= selectedCategory %>&sort=<%= sort %>"
                               class="px-3 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        <% } %>
                    </nav>
                </div>
                
                
            </div>
        </div>
    </div>
    <%- include('../partials/user/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
function addToCart(productId, quantity = 1) {
    fetch(`/addToCart?id=${productId}&quantity=${quantity}`)
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Added to Cart',
                    text: data.message,
                    timer: 2000,
                    showConfirmButton: false
                });
            } else {
                if (data.message === "Please log in first.") {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Login Required',
                        text: 'You must be logged in to add items to your cart.',
                        showConfirmButton: true,
                        confirmButtonText: 'Login',
                        allowOutsideClick: false
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = "/login"; 
                        }
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: data.message
                    });
                }
            }
        })
        .catch(error => {
            console.error("Error:", error);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Something went wrong. Please try again.'
            });
        });
}


        function addToWishlist(productId) {
            fetch(`/addToWishlist?id=${productId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Added to Wishlist',
                            text: data.message,
                            timer: 2000,
                            showConfirmButton: false
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: data.message,
                            timer: 2000,
                            showConfirmButton: false
                        });
                    }
                })
                .catch(error => {
                    console.error("Error:", error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Something went wrong. Please try again.'
                    });
                });
        }

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
</body>
</html>