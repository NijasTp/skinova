<!-- views/orderDetails.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details - <%= orderedItem.product.productName %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f4f8;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #2c3e50;
        }

        .product-image {
            width: 100%;
            max-width: 300px;
            border-radius: 5px;
            margin: 20px auto;
            display: block;
        }

        .status {
            padding: 10px;
            border-radius: 5px;
            color: white;
            font-weight: bold;
            text-align: center;
            margin: 10px 0;
        }

        .pending { background-color: orange; }
        .confirmed { background-color: blue; }
        .shipped { background-color: teal; }
        .delivered { background-color: green; }
        .cancelled { background-color: red; }
        .return-request { background-color: purple; }
        .returned { background-color: gray; }

        .details {
            margin: 20px 0;
        }

        .back-button {
            display: inline-block;
            padding: 10px 15px;
            background-color: #1a4741;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .back-button:hover {
            background-color: #123530;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Order Details</h1>
        <img src="/<%= orderedItem.product.productImage[0] %>" alt="<%= orderedItem.product.productName %>" class="product-image">
        <h2><%= orderedItem.product.productName %></h2>
        
        <div class="status <%= orderedItem.status.toLowerCase() %>">
            <%= orderedItem.status.charAt(0).toUpperCase() + orderedItem.status.slice(1) %>
        </div>

        <div class="details">
            <p><strong>Quantity:</strong> <%= orderedItem.quantity %></p>
            <p><strong>Price:</strong> $<%= orderedItem.price.toFixed(2) %></p>
            <p><strong>Order ID:</strong> <%= order.orderId %></p>
            <p><strong>Created On:</strong> <%= new Date(order.createdOn).toLocaleDateString() %></p>
            <p><strong>Total Price:</strong> $<%= order.totalPrice.toFixed(2) %></p>
        </div>

        <a href="/orders" class="back-button">Back to Orders</a>
        
        <% if (orderedItem.status.toLowerCase() === 'delivered' && !orderedItem.returnRequested) { %>
            <br><br>
            <label >Return order?</label><br>
            <button onclick="requestReturn('<%= orderedItem._id %>')" class="btn btn-info">
                Return
            </button>
        <% } else if (orderedItem.returnRequested) { %>
            <p style="color: purple; font-weight: bold;">Return Requested: <%= orderedItem.returnReason %></p>
        <% } %>
        
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function requestReturn(itemId) {
        Swal.fire({
            title: 'Return Request',
            input: 'textarea',
            inputLabel: 'Reason for Return',
            inputPlaceholder: 'Enter the reason...',
            inputAttributes: {
                'aria-label': 'Enter your return reason here'
            },
            showCancelButton: true,
            confirmButtonText: 'Submit',
            cancelButtonText: 'Cancel',
            preConfirm: (returnReason) => {
                if (!returnReason.trim()) {
                    Swal.showValidationMessage('Return reason is required!');
                }
                return returnReason;
            }
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/request-return/${itemId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ returnReason: result.value })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire('Success!', 'Return request sent successfully.', 'success')
                            .then(() => location.reload());
                    } else {
                        Swal.fire('Error!', data.message, 'error');
                    }
                })
                .catch(error => {
                    console.error("Error:", error);
                    Swal.fire('Error!', 'An error occurred.', 'error');
                });
            }
        });
    }
</script>

</body>

</html>